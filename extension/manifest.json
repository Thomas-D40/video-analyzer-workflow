{
    "manifest_version": 3,
    "name": "YouTube Argument Analyzer",
    "version": "1.0.0",
    "description": "Analyse les arguments d'une vid√©o YouTube avec fact-checking automatique",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}